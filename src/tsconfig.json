{
  "compilerOptions": {
    "target": "es2017",
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "Node",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "typeRoots": ["../node_modules/@types", "./types/modules", "./types/ambient"]
  }
}
