{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "outDir": "build",
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "target": "es2017",
    "lib": ["es2022"]
  },
  "exclude": ["*.cjs", "*.js", "*.mjs", "**/*.spec.ts"],
  "include": ["src"]
}
